<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#242424"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="400dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="2"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="3"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn01"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="+"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="4"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="5"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="6"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn02"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="-"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="7"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="8"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="9"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn03"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="*"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn08"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="C"
            android:gravity="center"
            android:textSize="40dp"
            android:backgroundTint="#ffc405"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn04"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn05"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="="
            android:gravity="center"
            android:textSize="40dp"
            android:backgroundTint="#ffc405"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn09"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="/"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="-600dp"
        android:layout_marginLeft="100dp"
        android:background="#fff">

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:layout_marginLeft="0dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:background="#fff">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:text=""
            android:textSize="50dp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>